{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "zoom-pan": ["../../src/index.ts"]
    },
    "types": ["vite/client"]
  },
  "include": ["vue-example.vue", "env.d.ts"],
  "exclude": ["node_modules"]
}
